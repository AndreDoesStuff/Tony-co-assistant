# MongoDB Configuration
# Choose one of the following options:

# Option 1: Backend API (Recommended for production)
REACT_APP_MONGODB_API_ENDPOINT=https://your-backend-api.com
REACT_APP_MONGODB_USE_DATA_API=false

# Option 2: MongoDB Atlas Data API (Alternative)
# REACT_APP_MONGODB_USE_DATA_API=true
# REACT_APP_MONGODB_DATA_API_URL=https://data.mongodb-api.com/app/your-app-id/endpoint/data/v1
# REACT_APP_MONGODB_DATA_API_KEY=your_data_api_key

# Database Configuration
REACT_APP_MONGODB_DB=tony_assistant
REACT_APP_ENABLE_MONGODB=true

# Application Configuration
REACT_APP_ENVIRONMENT=production
REACT_APP_APP_NAME=Tony Assistant
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Performance Settings
REACT_APP_MONGODB_SYNC_INTERVAL=30000
REACT_APP_MONGODB_RETRY_ATTEMPTS=3
REACT_APP_MONGODB_RETRY_DELAY=1000

# Security Settings
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true

# Optional: Analytics and Monitoring
REACT_APP_ANALYTICS_ID=your_analytics_id
REACT_APP_ERROR_REPORTING_KEY=your_error_reporting_key 